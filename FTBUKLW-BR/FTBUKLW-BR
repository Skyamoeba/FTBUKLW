mon2.write('Temp     [')
if TEMPB == 19   then mon2.setCursorPos(13,7) mon2.setTextColor(TXTCOL[4])  mon2.write(" ") end
if TEMPB >= 200  then mon2.setCursorPos(13,7) mon2.setTextColor(TXTCOL[4])  mon2.write(CHAR) end
if TEMPB >= 400  then mon2.setCursorPos(14,7) mon2.setTextColor(TXTCOL[4])  mon2.write(CHAR) end
if TEMPB >= 600  then mon2.setCursorPos(15,7) mon2.setTextColor(TXTCOL[4])  mon2.write(CHAR) end
if TEMPB >= 800  then mon2.setCursorPos(16,7) mon2.setTextColor(TXTCOL[2] ) mon2.write(CHAR) end
