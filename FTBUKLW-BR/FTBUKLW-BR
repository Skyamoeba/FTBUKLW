end

--######################################################################################################


--######################################################################################################
--## Status Display ##
--####################

function StatusMonitor()

function VerInfo()
	BRAPI.verInfoStat(21,1, MVER[1], StatMon,TXTCOL[1])
end

function FuelLevel()
StatMon.setCursorPos(1,1)
STATMONCOL(TXTCOL[1])
StatMon.write('BR Reactor Control')

if ComConfig[2] == 1 then
STATMONCOL(TXTCOL[5])
StatMon.setCursorPos(1,2)
StatMon.write('Tot Fuel :')

StatMon.setCursorPos(12,2)
STATMONCOL(TXTCOL[5])
StatMon.write(math.floor((((RACommP.getFuelAmount()+RBCommP.getFuelAmount())/(RACommP.getFuelAmountMax()+RBCommP.getFuelAmountMax()))*100)+0.5)..'%')

STATMONCOL(TXTCOL[4])
StatMon.setCursorPos(1,3)
StatMon.write('Tot Waste:')

StatMon.setCursorPos(12,3)
STATMONCOL(TXTCOL[4])
StatMon.write(math.floor((((RACommP.getWasteAmount()+RBCommP.getWasteAmount())/(RACommP.getFuelAmountMax()+RBCommP.getFuelAmountMax()))*100)+0.5)..'%')
else
STATMONCOL(TXTCOL[5])
StatMon.setCursorPos(1,2)
StatMon.write('Tot Fuel :')

StatMon.setCursorPos(12,2)
STATMONCOL(TXTCOL[5])
StatMon.write(math.floor((((RACommP.getFuelAmount())/(RACommP.getFuelAmountMax()))*100)+0.5)..'%')

STATMONCOL(TXTCOL[4])
StatMon.setCursorPos(1,3)
StatMon.write('Tot Waste:')

StatMon.setCursorPos(12,3)
STATMONCOL(TXTCOL[4])
StatMon.write(math.floor((((RACommP.getWasteAmount())/(RACommP.getFuelAmountMax()))*100)+0.5)..'%')
	end
end



if ComConfig[8] == 1 then
	
local StatMonCK1, errsd1 = pcall(VerInfo)
if not StatMonCK1 then
	ComConfig[8] = 0
	Error[1] = 1
	Error[2] = 1
	Save(ComConfig, "BR-COM.cfg")
	Save(Error, "BR-ERR.cfg")
	os.reboot()
end

local StatMonCK2, errsd2 = pcall(FuelLevel)
if not StatMonCK2 then
	ComConfig[8] = 0
	Error[1] = 1
	Error[2] = 1
	Save(ComConfig, "BR-COM.cfg")
	Save(Error, "BR-ERR.cfg")
	os.reboot()
end
	StatMon.clear()
	VerInfo()
	FuelLevel()
end

end

--######################################################################################################
--## Reactor A ##
--###############

function ReactorAFunctions()
function ReactorAGUIFrame()
if ReactorA[9] == 1 then
BRAPI.ReactorGUIF(mon1, TXTCOL[1])
end
end

function ReactorANameDIS()
	TurRotA = math.floor(TACommp.getRotorSpeed())

	mon1.setCursorPos(11,1)
	RTRAMONCOL(TXTCOL[1]) --COL1
	mon1.write((ReactorA[3])) 
	--mon1.write(TurRotA) -- 1791.5 rpm with 862 mB/t
end



function FUELREACA()
FUELA = math.floor((((RACommP.getFuelAmount())/(RACommP.getFuelAmountMax()))*100)+0.5)
CHAR = "="
mon1.setCursorPos(3,3)
RTRAMONCOL(TXTCOL[14])
mon1.write('Fuel [')
if FUELA == 0.0   then mon1.setCursorPos(9,3) mon1.setTextColor(TXTCOL[15]) mon1.write("          ") end
if FUELA >= 10.0  then mon1.setCursorPos(9,3) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if FUELA >= 20.0  then mon1.setCursorPos(10,3) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if FUELA >= 30.0  then mon1.setCursorPos(11,3) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if FUELA >= 40.0  then mon1.setCursorPos(12,3) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if FUELA >= 50.0  then mon1.setCursorPos(13,3) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if FUELA >= 60.0  then mon1.setCursorPos(14,3) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if FUELA >= 70.0  then mon1.setCursorPos(15,3) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if FUELA >= 80.0  then mon1.setCursorPos(16,3) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if FUELA >= 90.0  then mon1.setCursorPos(17,3) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if FUELA >= 100.0 then mon1.setCursorPos(18,3) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
mon1.setCursorPos(19,3)
RTRAMONCOL(TXTCOL[14])
mon1.write("]")
end


function WasteRecA()
WASTA = math.floor((((RACommP.getWasteAmount())/(RACommP.getFuelAmountMax()))*100)+0.5)
CHAR = "="
mon1.setCursorPos(3,4)
RTRAMONCOL(TXTCOL[14])
mon1.write('Waste[')
if WASTA <= 10.0   then mon1.setCursorPos(9, 4) mon1.setTextColor(TXTCOL[14]) mon1.write("          ") end
if WASTA >= 10.0  then mon1.setCursorPos(9, 4) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if WASTA >= 20.0  then mon1.setCursorPos(10,4) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if WASTA >= 30.0  then mon1.setCursorPos(11,4) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if WASTA >= 40.0  then mon1.setCursorPos(12,4) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if WASTA >= 50.0  then mon1.setCursorPos(13,4) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if WASTA >= 60.0  then mon1.setCursorPos(14,4) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if WASTA >= 70.0  then mon1.setCursorPos(15,4) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if WASTA >= 80.0  then mon1.setCursorPos(16,4) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if WASTA >= 90.0  then mon1.setCursorPos(17,4) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if WASTA >= 100.0 then mon1.setCursorPos(18,4) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
mon1.setCursorPos(19,4)
RTRAMONCOL(TXTCOL[14])
mon1.write("]")
end


function ConRODA()
RODSA = math.floor(100-(RACommP.getControlRodLevel(0)))
CHAR = "="
mon1.setCursorPos(3,5)
RTRAMONCOL(TXTCOL[14])
mon1.write('Rods [')
if RODSA <= 10.0  then mon1.setCursorPos(9, 5) mon1.setTextColor(TXTCOL[14]) mon1.write("          ") end
if RODSA >= 10.0  then mon1.setCursorPos(9, 5) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if RODSA >= 20.0  then mon1.setCursorPos(10,5) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if RODSA >= 30.0  then mon1.setCursorPos(11,5) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if RODSA >= 40.0  then mon1.setCursorPos(12,5) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if RODSA >= 50.0  then mon1.setCursorPos(13,5) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if RODSA >= 60.0  then mon1.setCursorPos(14,5) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if RODSA >= 70.0  then mon1.setCursorPos(15,5) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if RODSA >= 80.0  then mon1.setCursorPos(16,5) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if RODSA >= 90.0  then mon1.setCursorPos(17,5) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if RODSA >= 100.0 then mon1.setCursorPos(18,5) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
mon1.setCursorPos(19,5)
RTRAMONCOL(TXTCOL[14])
mon1.write("]")
end









function ReactorATemp()
if RACommP.getCasingTemperature()>=650 then
    	if ReactorA[9] == 1 then
    	mon1.setCursorPos(3,7)
    	RTRAMONCOL(TXTCOL[11])
    	end
    	COMMONCOL(TXTCOL[11])
    else if RACommP.getCasingTemperature()>=950 then
        if ReactorA[9] == 1 then
        mon1.setCursorPos(3,7)
        RTRAMONCOL(TXTCOL[15])
    	end
        COMMONCOL(TXTCOL[15])
    else
		if ReactorA[9] == 1 then
		mon1.setCursorPos(3,7)
		RTRAMONCOL(TXTCOL[14])
	    end
		COMMONCOL(TXTCOL[14])
    end
end

TEMPA = math.floor(RACommP.getCasingTemperature())
ENGYA   = math.floor(RACommP.getEnergyStored())
RFATA = math.floor(RACommP.getEnergyProducedLastTick()+0.5)
CHAR = "="

if ReactorA[9] == 1 then
mon1.setCursorPos(3,7)
RTRAMONCOL(TXTCOL[14])
mon1.write('Temp     [')
if TEMPA == 19   then mon1.setCursorPos(13,7) mon1.setTextColor(TXTCOL[4])  mon1.write("          ") end
if TEMPA >= 200  then mon1.setCursorPos(13,7) mon1.setTextColor(TXTCOL[4])  mon1.write(CHAR) end
if TEMPA >= 400  then mon1.setCursorPos(14,7) mon1.setTextColor(TXTCOL[4])  mon1.write(CHAR) end
if TEMPA >= 600  then mon1.setCursorPos(15,7) mon1.setTextColor(TXTCOL[4])  mon1.write(CHAR) end
if TEMPA >= 800  then mon1.setCursorPos(16,7) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if TEMPA >= 1000 then mon1.setCursorPos(17,7) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if TEMPA >= 1200 then mon1.setCursorPos(18,7) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if TEMPA >= 1400 then mon1.setCursorPos(19,7) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if TEMPA >= 1600 then mon1.setCursorPos(20,7) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if TEMPA >= 1800 then mon1.setCursorPos(21,7) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if TEMPA >= 2000 then mon1.setCursorPos(22,7) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
mon1.setCursorPos(23,7)
RTRAMONCOL(TXTCOL[14])
mon1.write("]")
end


--######################
--## Computer Display ##################################################################################
--######################

term.setCursorPos(3,12)
write("                      ")
term.setCursorPos(3,12)
term.write('Temp (C) : ') term.write(tostring (math.floor(RACommP.getCasingTemperature())))
end

function ReactorAFlux()
if ReactorA[9] == 1 then 
mon1.setCursorPos(3,8)
RTRAMONCOL(TXTCOL[14])
mon1.write('Energy   [') 
if ENGYA == 0       then mon1.setCursorPos(13,8) mon1.setTextColor(TXTCOL[15]) mon1.write("          ") end
if ENGYA >= 1000000 then mon1.setCursorPos(13,8) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if ENGYA >= 2000000 then mon1.setCursorPos(14,8) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if ENGYA >= 3000000 then mon1.setCursorPos(15,8) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if ENGYA >= 4000000 then mon1.setCursorPos(16,8) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if ENGYA >= 5000000 then mon1.setCursorPos(17,8) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if ENGYA >= 6000000 then mon1.setCursorPos(18,8) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if ENGYA >= 7000000 then mon1.setCursorPos(19,8) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if ENGYA >= 8000000 then mon1.setCursorPos(20,8) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if ENGYA >= 9000000 then mon1.setCursorPos(21,8) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if ENGYA ==10000000 then mon1.setCursorPos(22,8) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
mon1.setCursorPos(23,8)
RTRAMONCOL(TXTCOL[14])
mon1.write("]")
mon1.setBackgroundColor(TXTCOL[16])
end

--######################
--## Computer Display ##################################################################################
--######################

term.setCursorPos(3,13)
write("                      ")
term.setCursorPos(3,13)
term.setTextColor((TXTCOL[14]))
write('Energy   : '..RACommP.getEnergyStored()..'')


if RACommP.getEnergyProducedLastTick()>=500 and RACommP.getEnergyProducedLastTick()<2000 then
    if ReactorA[9] == 1 then RTRAMONCOL(TXTCOL[2]) end
    COMMONCOL(TXTCOL[2])
end
if RACommP.getEnergyProducedLastTick()>=2000 then
    if ReactorA[9] == 1 then RTRAMONCOL(TXTCOL[15]) end
    COMMONCOL(TXTCOL[15])
end

if ReactorA[9] == 1 then
mon1.setCursorPos(3,9)
RTRAMONCOL(TXTCOL[14])
mon1.write('RF/t     [') 
if RFATA == 0     then mon1.setCursorPos(13,9) mon1.setTextColor(TXTCOL[15]) mon1.write("          ") end
if RFATA >= 3200  then mon1.setCursorPos(13,9) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if RFATA >= 6400  then mon1.setCursorPos(14,9) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if RFATA >= 9600  then mon1.setCursorPos(15,9) mon1.setTextColor(TXTCOL[15]) mon1.write(CHAR) end
if RFATA >= 12800 then mon1.setCursorPos(16,9) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if RFATA >= 16000 then mon1.setCursorPos(17,9) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if RFATA >= 19200 then mon1.setCursorPos(18,9) mon1.setTextColor(TXTCOL[2] ) mon1.write(CHAR) end
if RFATA >= 22400 then mon1.setCursorPos(19,9) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if RFATA >= 25600 then mon1.setCursorPos(20,9) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if RFATA >= 28800 then mon1.setCursorPos(21,9) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
if RFATA >= 32000 then mon1.setCursorPos(22,9) mon1.setTextColor(TXTCOL[14]) mon1.write(CHAR) end
mon1.setCursorPos(23,9)
RTRAMONCOL(TXTCOL[14])
mon1.write("]")
mon1.setBackgroundColor(TXTCOL[16])
end

--######################
--## Computer Display ##################################################################################
--######################

term.setCursorPos(3,14)
write("                      ")
term.setCursorPos(3,14)
write("RF/t     : ") write((math.floor(RACommP.getEnergyProducedLastTick()+0.5)))
end


function ReactorAWarn()
	  if offlineflag==1 then
	  if ReactorA[9] == 1 then 
	    mon1.setCursorPos(21,4)
	    RTRAMONCOL(TXTCOL[9])
	    mon1.write('  MANO  ')
	    end

	    if ComConfig[8] == 1 then
	    StatMon.setCursorPos(1,4)
    	STATMONCOL(TXTCOL[9])
    	StatMon.write('Status   : M.O  ')
        end

    	term.setCursorPos(3,15)
    	COMMONCOL(TXTCOL[9])
    	write('Status   : M.O  ')
	  end
	  if emptyflag==1 then
	  if ReactorA[9] == 1 then 
	    mon1.setCursorPos(21,4)
	    RTRAMONCOL(TXTCOL[7])
	    mon1.write('  FUEL  ')
	    end

	    if ComConfig[8] == 1 then
	    StatMon.setCursorPos(1,4)
    	STATMONCOL(TXTCOL[7])
    	StatMon.write('Status   : F.E  ')
    	end

    	term.setCursorPos(3,15)
    	COMMONCOL(TXTCOL[7])
    	write('Status   : F.E  ')
	  end
	  if emptyflag==0 and offlineflag==0 and RACommP.getControlRodLevel(0)>75 then
	  if ReactorA[9] == 1 then 
	    mon1.setCursorPos(21,4)
	    RTRAMONCOL(TXTCOL[5])
	    mon1.write('  LPSM  ')
	  end

	  	if ComConfig[8] == 1 then
	    StatMon.setCursorPos(1,4)
    	STATMONCOL(TXTCOL[5])
    	StatMon.write('Status   : L.P.M')
    	end

    	term.setCursorPos(3,15)
    	COMMONCOL(TXTCOL[5])
    	write('Status   : L.P.M')
    end
	  if emptyflag==0 and offlineflag==0 and RACommP.getControlRodLevel(0)<=75 then
	  if ReactorA[9] == 1 then 
	    mon1.setCursorPos(21,4)
	    RTRAMONCOL(TXTCOL[2])
	    mon1.write('  HIGH  ')
	  end

	    if ComConfig[8] == 1 then
	    StatMon.setCursorPos(1,4)
    	STATMONCOL(TXTCOL[2])
    	StatMon.write('Status   : H.P.M')
    	end

    	term.setCursorPos(3,15)
    	COMMONCOL(TXTCOL[2])
    	write('Status   : H.P.M')
	  end
end
	
	function ReactorAMainErrorCheck()
	if ReactorA[4] == 1 then
		if ReactorA[9] == 1 then
		--ReactorANameDIS()
		FUELREACA()
		WasteRecA()
		ConRODA()
		end
		SplashProgSettingsA()
	end
	
	if ReactorA[5] == 1 then
		ReactorATemp()
	end

	if ReactorA[6] == 1 then
		ReactorAFlux()
	end

	if ReactorA[7] == 1 then
		ReactorAWarn()
	end
end

local ReactorADC, errsRAD = pcall(ReactorAGUIFrame) -- Reactor A Error Catcher
if not ReactorADC then
	ReactorA[9] = 0
	Error[1] = 1
	Error[3] = 1
	Save(ComConfig, "BR-COM.cfg")
	Save(Error, "BR-ERR.cfg")
	os.reboot()
end


local ReactorADC, errsRAD = pcall(ReactorAMainErrorCheck) -- Reactor A Error Catcher
if not ReactorADC then
	ReactorA[9] = 0
	Error[1] = 1
	Error[4] = 1
	Save(ComConfig, "BR-COM.cfg")
	Save(Error, "BR-ERR.cfg")
	os.reboot()
end
end

