local DEV = 0

--############################
--## API Loader/ Downloader  #
--###################################################################################################
local GAPI = "pastebin get PwiHKVaH BRAPI"
while not fs.exists ("BRAPI") do
	print("API not found... Fetching Now")
	shell.run(GAPI)
end





os.unloadAPI("BRAPI") -- Unloads to refresh API











os.loadAPI("BRAPI")

--### END OF API LOADER ###--

