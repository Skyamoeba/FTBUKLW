--## Reactor B ##
--###############

function ReactorBFunctions()
function ReactorBGUIFrame()
if ReactorB[9] == 1 then
BRAPI.ReactorGUIF(mon2, TXTCOL[1])
end
end


function ReactorBNameDIS()
	mon2.setCursorPos(11,1)
	RTRBMONCOL(TXTCOL[1]) --COL1
	mon2.write((ReactorB[3]))
end



function FUELREACB()
FUELB = math.floor((((RBCommP.getFuelAmount())/(RBCommP.getFuelAmountMax()))*100)+0.5)
CHAR = "="
mon2.setCursorPos(3,3)
RTRBMONCOL(TXTCOL[14])
mon2.write('Fuel [')
if FUELB == 0.0   then mon2.setCursorPos(9,3)  mon2.setTextColor(TXTCOL[15]) mon2.write("          ") end
if FUELB >= 10.0  then mon2.setCursorPos(9,3)  mon2.setTextColor(TXTCOL[15]) mon2.write(CHAR) end
if FUELB >= 20.0  then mon2.setCursorPos(10,3) mon2.setTextColor(TXTCOL[15]) mon2.write(CHAR) end
if FUELB >= 30.0  then mon2.setCursorPos(11,3) mon2.setTextColor(TXTCOL[15]) mon2.write(CHAR) end
if FUELB >= 40.0  then mon2.setCursorPos(12,3) mon2.setTextColor(TXTCOL[2] ) mon2.write(CHAR) end
if FUELB >= 50.0  then mon2.setCursorPos(13,3) mon2.setTextColor(TXTCOL[2] ) mon2.write(CHAR) end
if FUELB >= 60.0  then mon2.setCursorPos(14,3) mon2.setTextColor(TXTCOL[2] ) mon2.write(CHAR) end
if FUELB >= 70.0  then mon2.setCursorPos(15,3) mon2.setTextColor(TXTCOL[14]) mon2.write(CHAR) end
if FUELB >= 80.0  then mon2.setCursorPos(16,3) mon2.setTextColor(TXTCOL[14]) mon2.write(CHAR) end
if FUELB >= 90.0  then mon2.setCursorPos(17,3) mon2.setTextColor(TXTCOL[14]) mon2.write(CHAR) end
if FUELB >= 100.0 then mon2.setCursorPos(18,3) mon2.setTextColor(TXTCOL[14]) mon2.write(CHAR) end
mon2.setCursorPos(19,3)
RTRBMONCOL(TXTCOL[14])
mon2.write("]")
end


