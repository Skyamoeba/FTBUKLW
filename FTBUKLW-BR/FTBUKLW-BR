if ENGYB >= 2000000 then mon2.setCursorPos(14,8) mon2.setTextColor(TXTCOL[15]) mon2.write(CHAR) end
if ENGYB >= 3000000 then mon2.setCursorPos(15,8) mon2.setTextColor(TXTCOL[15]) mon2.write(CHAR) end
if ENGYB >= 4000000 then mon2.setCursorPos(16,8) mon2.setTextColor(TXTCOL[2] ) mon2.write(CHAR) end
if ENGYB >= 5000000 then mon2.setCursorPos(17,8) mon2.setTextColor(TXTCOL[2] ) mon2.write(CHAR) end
